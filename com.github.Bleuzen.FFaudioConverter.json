{
    "app-id": "com.github.Bleuzen.FFaudioConverter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.11",
    "sdk": "org.kde.Sdk",
    "command": "ffaudioconverter",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        "lame/lame-3.100.json",
        {
            "name": "soxr",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=no",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/include"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://sourceforge.net/projects/soxr/files/soxr-0.1.3-Source.tar.xz",
                "sha256": "b111c15fdc8c029989330ff559184198c161100a59312f5dc19ddeb9b5a15889"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-doc",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-libmp3lame",
                "--enable-libvorbis",
                "--enable-libopus",
                "--enable-libsoxr"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://ffmpeg.org/releases/ffmpeg-4.1.tar.xz",
                "sha256": "a38ec4d026efb58506a99ad5cd23d5a9793b4bf415f2c4c2e9c1bb444acd1994"
                }
            ]
        },
        {
            "name": "FFaudioConverter",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Bleuzen/FFaudioConverter/releases/download/v0.20.1/FFaudioConverter-0.20.1.tar.xz",
                    "sha256": "d3bffe0bbc738999d6a7ab5d46b7816dac0573b3b4d635d87bc2968dc822f9d6",
                    "strip-components": 0
                }
            ]
        }
    ]
}
