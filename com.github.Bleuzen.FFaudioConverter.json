{
    "app-id": "com.github.Bleuzen.FFaudioConverter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.15",
    "sdk": "org.kde.Sdk",
    "command": "ffaudioconverter",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "soxr",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=no",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/include"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://sourceforge.net/projects/soxr/files/soxr-0.1.3-Source.tar.xz",
                "sha256": "b111c15fdc8c029989330ff559184198c161100a59312f5dc19ddeb9b5a15889"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-rpath",
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-doc",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-libmp3lame",
                "--enable-libvorbis",
                "--enable-libopus",
                "--enable-libsoxr"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://ffmpeg.org/releases/ffmpeg-4.4.tar.xz",
                "sha256": "06b10a183ce5371f915c6bb15b7b1fffbe046e8275099c96affc29e17645d909"
                }
            ]
        },
        {
            "name": "FFaudioConverter",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Bleuzen/FFaudioConverter/releases/download/v0.30.0/FFaudioConverter-0.30.0-src.tar.xz",
                    "sha256": "ed4fae8b6d45db346b93c25045984299b0f731d38137cd3e8d1b81281210f21e",
                    "strip-components": 0
                }
            ]
        }
    ]
}
