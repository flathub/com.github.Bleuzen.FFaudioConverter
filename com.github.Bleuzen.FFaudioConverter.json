{
    "app-id": "com.github.Bleuzen.FFaudioConverter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "ffaudioconverter",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "soxr",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=no",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/include"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://sourceforge.net/projects/soxr/files/soxr-0.1.3-Source.tar.xz",
                "sha256": "b111c15fdc8c029989330ff559184198c161100a59312f5dc19ddeb9b5a15889"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-rpath",
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-doc",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-libmp3lame",
                "--enable-libvorbis",
                "--enable-libopus",
                "--enable-libsoxr"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://ffmpeg.org/releases/ffmpeg-4.1.1.tar.xz",
                "sha256": "373749824dfd334d84e55dff406729edfd1606575ee44dd485d97d45ea4d2d86"
                }
            ]
        },
        {
            "name": "FFaudioConverter",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Bleuzen/FFaudioConverter/releases/download/v0.25/FFaudioConverter-0.25-src.tar.xz",
                    "sha256": "c2c06fbd6eb6b0007926ec6fbf1dac266ecbf7965ba37575c9bad19eb08f5a63",
                    "strip-components": 0
                }
            ]
        }
    ]
}
