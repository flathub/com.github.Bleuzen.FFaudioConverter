{
    "app-id": "com.github.Bleuzen.FFaudioConverter",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.8",
    "sdk": "org.kde.Sdk",
    "command": "ffaudioconverter",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "soxr",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=no",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/include"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://sourceforge.net/projects/soxr/files/soxr-0.1.3-Source.tar.xz",
                "sha256": "b111c15fdc8c029989330ff559184198c161100a59312f5dc19ddeb9b5a15889"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-rpath",
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-doc",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-libmp3lame",
                "--enable-libvorbis",
                "--enable-libopus",
                "--enable-libsoxr"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://ffmpeg.org/releases/ffmpeg-6.1.1.tar.xz",
                    "sha256": "8684f4b00f94b85461884c3719382f1261f0d9eb3d59640a1f4ac0873616f968"
                }
            ]
        },
        {
            "name": "FFaudioConverter",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Bleuzen/FFaudioConverter/releases/download/v0.32.0/FFaudioConverter-0.32.0-src.tar.xz",
                    "sha256": "49e8807b8b12be3e7b05852bfc68a40b892fe8b36f6bc28e18b62382e9a31e15",
                    "strip-components": 0
                }
            ]
        }
    ]
}
