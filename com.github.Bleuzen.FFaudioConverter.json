{
    "app-id": "com.github.Bleuzen.FFaudioConverter",
    "runtime": "org.kde.Platform",
    "runtime-version": "5.12",
    "sdk": "org.kde.Sdk",
    "command": "ffaudioconverter",
    "finish-args": [
        "--socket=wayland",
        "--socket=x11",
        "--share=ipc",
        "--socket=pulseaudio",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "soxr",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DBUILD_TESTS=no",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "cleanup": [
                "/include"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://sourceforge.net/projects/soxr/files/soxr-0.1.3-Source.tar.xz",
                "sha256": "b111c15fdc8c029989330ff559184198c161100a59312f5dc19ddeb9b5a15889"
                }
            ]
        },
        {
            "name": "ffmpeg",
            "config-opts": [
                "--enable-rpath",
                "--enable-gpl",
                "--disable-static",
                "--enable-shared",
                "--disable-doc",
                "--disable-ffplay",
                "--disable-ffprobe",
                "--enable-libmp3lame",
                "--enable-libvorbis",
                "--enable-libopus",
                "--enable-libsoxr"
            ],
            "cleanup": [
                "/share/ffmpeg/examples"
            ],
            "sources": [
                {
                "type": "archive",
                "url": "https://ffmpeg.org/releases/ffmpeg-4.2.2.tar.xz",
                "sha256": "cb754255ab0ee2ea5f66f8850e1bd6ad5cac1cd855d0a2f4990fb8c668b0d29c"
                }
            ]
        },
        {
            "name": "FFaudioConverter",
            "buildsystem": "qmake",
            "config-opts": [
                "CONFIG+=release"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/Bleuzen/FFaudioConverter/releases/download/v0.27/FFaudioConverter-0.27-src.tar.xz",
                    "sha256": "34ef6521390e917f1031f4c73ce863cb0ab67943b5d16509900ad82f2e025a7c",
                    "strip-components": 0
                }
            ]
        }
    ]
}
